@model F2022A2THH.Models.InvoiceWithDetailViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details for Invoice #@Model.InvoiceId</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Customer Info
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerId)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.CustomerFirstName)
            @Html.DisplayFor(model => model.CustomerLastName)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.CustomerState),
            @Html.DisplayFor(model => model.CustomerCountry)
        </dd>
    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.BillingAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.BillingAddress)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.BillingCity),
            @Html.DisplayFor(model => model.BillingState)
        </dd>

        <dd>
            @Html.DisplayFor(model => model.BillingCountry).
            @Html.DisplayFor(model => model.BillingPostalCode)
        </dd>
    </dl>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Sales Rep
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CustomerEmployeeFirstName)
            @Html.DisplayFor(model => model.CustomerEmployeeLastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.InvoiceDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.InvoiceDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>
    </dl>

    <h4>Line Items</h4>

    <table class="table table-striped">

        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().InvoiceLineId)
            </th>
            <th>
                
            </th>
            <th style="text-align: center">
                @Html.DisplayNameFor(model => model.InvoiceLines.First().TrackTrackId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceLines.First().LinePrice)
            </th>
        </tr>
        @foreach (var line in Model.InvoiceLines)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => line.InvoiceLineId)
                </td>
                <td style="text-align: right">
                    @Html.DisplayNameFor(modelItem => line.TrackName):
                    <br />
                    @Html.DisplayNameFor(modelItem => line.TrackAlbumTitle):
                    <br />
                    @Html.DisplayNameFor(modelItem => line.TrackAlbumArtistName):
                    <br />
                    @Html.DisplayNameFor(modelItem => line.TrackComposer):
                    <br />
                    @Html.DisplayNameFor(modelItem => line.TrackGenreName):
                    <br />
                    @Html.DisplayNameFor(modelItem => line.TrackMediaTypeName):

                </td>
                <td>
                    @Html.DisplayFor(modelItem => line.TrackName)
                    <br />
                    @Html.DisplayFor(modelItem => line.TrackAlbumTitle)
                    <br />
                    @Html.DisplayFor(modelItem => line.TrackAlbumArtistName)
                    <br />
                    @Html.DisplayFor(modelItem => line.TrackComposer)
                    <br />
                    @Html.DisplayFor(modelItem => line.TrackGenreName)
                    <br />
                    @Html.DisplayFor(modelItem => line.TrackMediaTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => line.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => line.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => line.LinePrice)
                </td>
            </tr>
        }

    </table>

</div>
<p>
    @Html.ActionLink("Back to List", "Index")
</p>
